<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite" parallel="none">
    <parameter name="env" value="${env}"/>
    <parameter name="browser" value="${browser}"/>
    <test verbose="2" preserve-order="true" name="Seleniumdemo">
        <groups>
            <dependencies>
                <group name="sendmail" depends-on="login"></group>
                <group name="logout" depends-on="sendmail"></group>
            </dependencies>
        </groups>
        <classes>
            <class name="com.epam.mail.LoginPageTest"/>
            <class name="com.epam.mail.MailBoxPageTest">
                <methods>
                    <include name="testAddDraftMail"></include>
                    <include name="testLogout"></include>
                </methods>
            </class>
            <class name="com.epam.mail.MessageDialogPageTest">
                <methods>
                    <include name="testSendEmail"></include>
                </methods>
            </class>
            <class name="com.epam.mail.LogoutPageTest"/>
        </classes>
    </test>
</suite>